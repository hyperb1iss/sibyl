# Example secrets for local development
# Copy to secrets.yaml and fill in real values
# NEVER commit secrets.yaml to git!
---
apiVersion: v1
kind: Secret
metadata:
  name: sibyl-secrets
  namespace: sibyl
type: Opaque
stringData:
  # Generate with: openssl rand -hex 32
  SIBYL_JWT_SECRET: "REPLACE_ME_WITH_RANDOM_HEX_32"
  # OpenAI API key (for embeddings)
  SIBYL_OPENAI_API_KEY: "sk-..."
  # Anthropic API key (for LLM)
  SIBYL_ANTHROPIC_API_KEY: "sk-ant-..."
---
apiVersion: v1
kind: Secret
metadata:
  name: sibyl-db-secret
  namespace: sibyl
type: Opaque
stringData:
  SIBYL_POSTGRES_PASSWORD: "sibyl_dev"
---
apiVersion: v1
kind: Secret
metadata:
  name: sibyl-falkordb-secret
  namespace: sibyl
type: Opaque
stringData:
  SIBYL_FALKORDB_PASSWORD: "conventions"
